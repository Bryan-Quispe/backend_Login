# Variables de Entorno - PRODUCCIÓN
# Copia este archivo a .env y actualiza los valores

# ===== BASE DE DATOS =====
# Host de PostgreSQL (en producción, usar un servicio administrado)
DB_HOST=postgres.prod.example.com

# Puerto de PostgreSQL
DB_PORT=5432

# Usuario de PostgreSQL
DB_USER=serplantas_prod

# Contraseña de PostgreSQL (CAMBIAR INMEDIATAMENTE)
DB_PASSWORD=CAMBIAR_CONTRASENA_SUPER_SEGURA_AQUI

# Nombre de la base de datos
DB_NAME=serplantas_db_prod

# ===== SEGURIDAD - JWT =====
# Clave secreta para JWT (Generar con: openssl rand -base64 32)
# CAMBIAR INMEDIATAMENTE - NO USES ESTA EN PRODUCCIÓN
JWT_SECRET=GENERAR_CON_openssl_rand_-base64_32_Y_CAMBIAR_AQUI

# ===== APLICACIÓN =====
# Puerto donde corre la aplicación
PORT=3000

# Ambiente
NODE_ENV=production

# ===== LOGGING =====
# Nivel de logs: error, warn, log, debug, verbose
LOG_LEVEL=log

# ===== CORS =====
# URL frontal permitida
FRONTEND_URL=https://tu-dominio.com

# ===== OPCIONALES - SMTP (para emails) =====
# Si quieres enviar emails
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USER=tu-email@example.com
MAIL_PASSWORD=contraseña-email
MAIL_FROM=noreply@example.com

# ===== OPCIONALES - RATE LIMITING =====
# Límite de requests por minuto
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1

# ===== OPCIONALES - BACKUP =====
# Configuración de backups automáticos
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * * # 2 AM diarios
